<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WatchDog.Maui.DecryptionScreen"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15" Margin="100,50,100,50">
            
           <Label Text="WatchDog - Descriptografia" 
           FontSize="24" 
           HorizontalOptions="Center" 
           VerticalOptions="Start" 
           Margin="0,0,0,20"/>

            <ScrollView HeightRequest="200" VerticalOptions="StartAndExpand">
                <Label x:Name="LogHistory" 
               VerticalOptions="Start" 
               LineBreakMode="WordWrap" 
               MaxLines="10"/>
            </ScrollView>

            <Button x:Name="UploadButton" 
            Text="Upload de Arquivo Criptografado" 
            Clicked="OnUploadFileClicked" 
            HorizontalOptions="FillAndExpand" />

            <Button x:Name="ProcessButton" 
            Text="Descriptografar Arquivo" 
            Clicked="OnProcessFileClicked" 
            HorizontalOptions="FillAndExpand" />

            <Button x:Name="DownloadButton" 
            Text="Baixar Arquivo Descriptografado" 
            Clicked="OnDownloadFileClicked" 
            HorizontalOptions="FillAndExpand" 
            IsEnabled="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>