<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:WatchDog.Maui"
             x:Class="WatchDog.Maui.MainPage">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10" Margin="150">
            <views:LogoView />

            <Label Text="Bem-vindo ao WatchDog!"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <Entry x:Name="UsernameEntry"
                   Placeholder="Nome de Usuário"
                   Keyboard="Email"
                   Margin="0,20,0,0" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Senha"
                   IsPassword="True"
                   Margin="0,10,0,0" />

            <Button Text="Login"
                    Clicked="OnLoginClicked"
                    Margin="0,20,0,0" />

            <Label x:Name="LoginStatusLabel"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

            <Button Text="Não tem uma conta? Cadastre-se"
                    Clicked="OnRegisterClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0" />
        </StackLayout>
    </ScrollView>

</ContentPage>
